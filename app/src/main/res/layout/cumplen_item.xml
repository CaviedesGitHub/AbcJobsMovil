<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="candSel" type="com.example.abcjobsnav.models.CandidatoSel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="0dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCumplen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblCandidatoCumple"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cumplen_candidate"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtCandidatoCumple"
                                    android:layout_width="150dp"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"
                                    android:text="@{candSel.apellidos+candSel.nombres}"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblCalifCumple"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cumple_valuation"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtCalifCumple"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{Integer.toString(candSel.calificacion)}"
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblFechaNacCumple"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cumplen_birthday"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtFechaNacCumple"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{candSel.fecha_nac}"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgPhotoCumple"
                                    android:contentDescription="@string/candidate_photo"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblHabilsTec"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/tech_skills"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtHabilsTec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{candSel.habilsTec}"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblHabilsBlan"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/soft_skills"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtHabilsBlan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{candSel.habilsBlan}"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblHabilsPers"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/pers_skills"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtHabilsPers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{candSel.habilsPers}"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>