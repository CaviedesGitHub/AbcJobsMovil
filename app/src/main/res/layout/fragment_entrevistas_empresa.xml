<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".ui.EntrevistasEmpresaFragment">

    <TextView
        android:id="@+id/txtTituloEVC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/candidate_interviews_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paginaJobsABC2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTituloEVC">

        <Button
            android:id="@+id/btnFiltersJobsABC2"
            android:autoSizeTextType="none"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/jobsabc_filters" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="false"
            android:textIsSelectable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="0-0 de 0"
            app:layout_constraintEnd_toStartOf="@id/pagAnt2"
            app:layout_constraintStart_toEndOf="@id/btnFiltersJobsABC2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/pagAnt2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/abcjobs_nav_previous_item"
            app:layout_constraintEnd_toStartOf="@id/pagSig2"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/navigate_before_24" />

        <ImageButton
            android:id="@+id/pagSig2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/abcjobs_nav_next_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/navigate_next_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/EVCContenido"
        app:layout_constraintTop_toBottomOf="@id/paginaJobsABC2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMsgVacioEVC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/no_interviews_were_found"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarEVC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/entrevistasRvEVC"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/entrevistasempresa_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paginaJobsABC"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EVCContenido">

        <Button
            android:id="@+id/btnFiltersJobsABC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/jobsabc_filters" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="false"
            android:textIsSelectable="false"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="0-0 de 0"
            app:layout_constraintEnd_toStartOf="@id/pagAnt"
            app:layout_constraintStart_toEndOf="@id/btnFiltersJobsABC"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/pagAnt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/abcjobs_nav_previous_item"
            app:layout_constraintEnd_toStartOf="@id/pagSig"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/navigate_before_24" />

        <ImageButton
            android:id="@+id/pagSig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/abcjobs_nav_next_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/navigate_next_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnEvBackCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/back_to_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paginaJobsABC" />

</androidx.constraintlayout.widget.ConstraintLayout>