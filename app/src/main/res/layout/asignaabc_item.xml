<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="puesto" type="com.example.abcjobsnav.models.Puesto"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="5dp"
        android:paddingVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblOrden"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/abcjobs_num"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtOrden"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(puesto.num)}"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblPerfil"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/candidate_interviews_profile"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPerfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{puesto.nom_perfil}"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblProyecto"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/candidate_interviews_project"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtProyecto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{puesto.nom_proyecto}"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblEmpresa"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/candidate_interviews_company"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtEmpresa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{puesto.nom_empresa}"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblFechaIni"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/abcjobs_inicio_de_proyecto"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtFechaIni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{puesto.fecha_inicio}"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>